@model OnlineShop.Core.DTOs.Users.ForgotPasswordViewModel

@{
    ViewData["Title"] = "فراموشی رمز عبور";
}

<section class="w-100 h-100 border-dark mt-2">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black rounded">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center align-items-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a class="text-decoration-none text-success" asp-action="Index" asp-controller="Home">خانه</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">بازیابی کلمه عبور</li>
                                    </ol>
                                </nav>

                                <h1 class="text-center text-secondary fw-bold mb-3 mx-1 mx-md-4 mt-3">بازیابی کلمه عبور</h1>
                                <form asp-action="ForgotPassword" asp-controller="Account" method="post" class="mx-1 mx-md-4">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    @if (ViewBag.Sent != null)
                                    {
                                        <div class="d-flex flex-row align-items-center mb-3">
                                            <div class="alert alert-success" role="alert">
                                                <h4 class="alert-heading">
                                                    <i class="bi bi-check2-circle icon-larger-1 me-2"></i> عملیات موفق
                                                </h4>
                                                <p>ایمیل بازیابی با موفقیت ارسال شد.</p>
                                                <hr>
                                                <p class="mb-0">لطفا جهت بازیابی کلمه عبور خود به ایمیل مراجعه کنید.</p>
                                            </div>
                                        </div>
                                    }

                                    <div class="d-flex flex-row align-items-center mb-3">
                                        <i class="bi bi-envelope icon-larger-1 me-3 align-self-end"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="Email" class="control-label"></label>
                                            <input asp-for="Email" type="email" class="form-control" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <br />

                                    <div class="form-group d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <input type="submit" value="تایید و ارسال" class="btn btn-info btn-lg" />
                                    </div>
                                </form>
                            </div>

                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex order-1 order-lg-2">
                                <img src="~/images/Local/Login.png" class="img-fluid" alt="Password image">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}