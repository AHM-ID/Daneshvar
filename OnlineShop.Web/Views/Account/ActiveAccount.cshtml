@{
    ViewData["Title"] = "فعال سازی";
}

<section class="w-100 border-dark mt-2">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black rounded">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center align-items-center">
                            <div class="col-12">
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a class="text-decoration-none text-success" asp-action="Index" asp-controller="Home">خانه</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">فعالسازی حساب</li>
                                    </ol>
                                </nav>
                                @if (ViewBag.IsActive)
                                {
                                    <h1 class="text-center text-success fw-bold mb-3 mx-1 mx-md-4 mt-3">فعال سازی حساب</h1>

                                    <div class="alert alert-success" role="alert">
                                        <h4 class="alert-heading"><i class="bi bi-check2-circle icon-larger-1 me-2"></i> حساب کاربری شما با موفقیت فعال سازی شد.</h4>
                                        <hr>
                                        <p class="mb-0">جهت ورود به سایت روی <a asp-action="Login" asp-controller="Account" class="text-decoration-none">لینک</a> کلیک کنید.</p>
                                    </div>
                                }
                                else
                                {
                                    <h1 class="text-center text-danger fw-bold mb-3 mx-1 mx-md-4 mt-3">عدم فعال سازی حساب</h1>

                                    <div class="alert alert-danger" role="alert">
                                        <h4 class="alert-heading"><i class="bi bi-x-lg icon-larger-1 me-2"></i>حساب کاربری با مشخصات ارسال شده یافت نشد.</h4>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>